<resource>

    <data-model>
        <object path="/config">
            <properties>
                <property name="name" title="Имя" type="string" path="@name"/>
                <property name="value" title="Значение" type="string" path="text()">
                    <editor type="text" rows="40"/>
                </property>
            </properties>
        </object>
    </data-model>

    <operations>
        <get format="xml"/>
        <post name="create" format="json" uri=".."/>
        <put format="json"/>
    </operations>

    <actions>
        <save/>

        <separator/>

        <cancel/>
    </actions>

</resource>